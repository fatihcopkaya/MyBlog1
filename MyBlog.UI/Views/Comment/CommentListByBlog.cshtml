@model IEnumerable<EntityLayer.Comments>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    

    <table class="table table-bordered table-stiped" style="width: ;100%">
        <thead>
            <tr>
                 <th>
                    Blog Id
                </th>
                <th>
                    Comment Id
                </th>
                <th>
                    Yorum Başlığı 
                </th>
                <th>
                    Yorum Açıklaması
                </th>
                <th>
                    Yorum Kullanıcı Adı
                </th>
                <th>
                    Yorum Tarihi
                </th>
               

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                     <td width="30%">
                        @obj.BlogId
                        
                    </td>
                     <td width="30%">
                        @obj.CommentId
                        
                    </td>

                    <td width="30%">
                        @obj.CommentTitle
                    </td>
                    <td width="30%">
                        @obj.CommentContent
                        
                    </td>
                    <td width="30%">
                        @obj.CommentUserName
                        
                    </td>
                    <td width="30%">
                        @obj.CommentDate
                        
                    </td>
                   
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Comment" asp-action="Delete" asp-route-id="@obj.CommentId"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i>Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
