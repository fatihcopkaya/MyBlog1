@model IEnumerable<EntityLayer.Comments>

<div class="comment-top">

        @{
            if (Model.Count()==0)
            {
                <h4>Bu posta henüz yorum yapılmadı, ilk yorumu siz yazın... </h4>
            }
            else{
                <h4>Yorumlar</h4>
            }

        }
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/web/images/149071.png" alt="" class="img-fluid" width="100" height="100" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <a>@item.CommentTitle</a>
                <br>
                <a>@item.CommentContent</a>
                <br>
                 <a>@item.CommentDate</a>
                 
            </div>
        </div>
        <br>
    }
</div>