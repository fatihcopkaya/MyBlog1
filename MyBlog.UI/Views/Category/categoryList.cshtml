@model IEnumerable<EntityLayer.Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Kategori Listesi</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="AddCategory" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Kategori Oluştur
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-stiped" style="width: ;100%">
        <thead>
            <tr>
                <th>
                    Kategori Başlığı
                </th>
                <th>
                    Kategori Açıklaması
                </th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.CategoryName
                    </td>
                    <td width="30%">
                        @obj.CategoryDescription
                        
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@obj.CategoryId"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Düzenle</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i>Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
